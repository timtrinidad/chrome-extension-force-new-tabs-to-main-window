{
  "name": "Force New Tabs to Main Window",
  "description": "Designate a single main window where new tabs should open",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "storage"],
  "homepage_url": "https://chrome.google.com/webstore/detail/force-new-tabs-to-main-wi/kgojjafnbajjomijiceiefakpphcicen",
  "action": {
    "default_icon": "src/icon.png"
  },
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "icons": { "128": "src/icon.png" }
}
